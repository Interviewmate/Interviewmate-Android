<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NextButton" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/deep_blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="PortfolioButton" parent="Widget.Material3.Button">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">5dp</item>
    </style>

    <style name="AnalysisResultButton" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/deep_blue</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">10dp</item>
    </style>

    <style name="small_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="small_text.gray" parent="small_text">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="small_text.black" parent="small_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="small_text.deep_blue" parent="small_text">
        <item name="android:textColor">@color/deep_blue</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_text.small" parent="title_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="title_text.medium" parent="title_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="title_text.question" parent="title_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="title_text.big" parent="title_text">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="timer_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="timer_text.big" parent="timer_text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="timer_text.medium" parent="timer_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="description_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="day_of_weeks_text">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical" tools:targetApi="o">15dp</item>
    </style>
</resources>
